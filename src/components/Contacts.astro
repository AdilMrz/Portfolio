<style>
  .contacts-section {
    padding: var(--section-padding);
  }

  .container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .contacts-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 4rem;
  }

  .contacts-text {
    max-width: 500px;
  }

  .contacts-text p {
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.7;
  }

  .contacts-box {
    border: 1px solid var(--border);
    padding: 1rem;
  }

  .contacts-box-title {
    color: var(--text-primary);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .contacts-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
  }

  .contact-item svg {
    width: 20px;
    height: 20px;
    min-width: 20px;
    flex-shrink: 0;
    color: var(--text-secondary);
  }

  .contact-item a {
    word-break: break-all;
  }


  .contact-item a:hover {
    color: var(--text-primary);
  }

  @media (max-width: 768px) {
    .contacts-content {
      flex-direction: column;
      text-align: center;
    }

    .contacts-box {
      width: fit-content;
      margin: 0 auto;
    }
  }
</style>
