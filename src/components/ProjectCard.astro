---
interface Props {
  image?: string;
  technologies: string[];
  title: string;
  description: string;
  liveUrl?: string;
  githubUrl?: string;
}

const { image, technologies, title, description, liveUrl, githubUrl } = Astro.props;
---

<article class="project-card">
  <div class="project-image">
    {image ? (
      <img src={image} alt={title} />
    ) : (
      <div class="image-placeholder">
        <svg viewBox="0 0 300 200" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="300" height="200" fill="var(--bg-secondary)"/>
          <rect x="20" y="20" width="260" height="10" rx="2" fill="var(--text-muted)" opacity="0.3"/>
          <rect x="20" y="40" width="200" height="10" rx="2" fill="var(--text-muted)" opacity="0.2"/>
          <rect x="20" y="70" width="100" height="80" rx="4" fill="var(--accent)" opacity="0.2"/>
          <rect x="140" y="70" width="140" height="36" rx="2" fill="var(--text-muted)" opacity="0.2"/>
          <rect x="140" y="114" width="140" height="36" rx="2" fill="var(--text-muted)" opacity="0.2"/>
        </svg>
      </div>
    )}
  </div>
  <div class="tech-tags">
    {technologies.map((tech) => (
      <span>{tech}</span>
    ))}
  </div>
  <div class="project-content">
    <h3 class="project-title">{title}</h3>
    <p class="project-description">{description}</p>
    <div class="project-links">
      {liveUrl && <a href={liveUrl} class="btn" target="_blank" rel="noopener">Live &lt;~&gt;</a>}
      {githubUrl && <a href={githubUrl} class="btn" target="_blank" rel="noopener">Github &gt;&gt;</a>}
    </div>
  </div>
</article>

<style>
  .project-card {
    border: 1px solid var(--border);
    background: transparent;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .project-image {
    width: 100%;
    aspect-ratio: 3/2;
    overflow: hidden;
    border-bottom: 1px solid var(--border);
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-secondary);
  }

  .image-placeholder svg {
    width: 100%;
    height: 100%;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding: 0.5rem;
    border-bottom: 1px solid var(--border);
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .project-content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .project-title {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .project-description {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    font-size: 1rem;
    flex-grow: 1;
    line-height: 1.5;
  }

  .project-links {
    display: flex;
    gap: 1rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border: 1px solid var(--accent);
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 0.3s ease;
    background: transparent;
  }

  .btn:hover {
    background-color: var(--accent);
    color: var(--bg-primary);
  }
</style>
