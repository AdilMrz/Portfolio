<section id="home" class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <h1>
          Je suis un <span class="highlight">QA testeur</span> et <span class="highlight">front-end développeur web et mobile</span>
        </h1>
        <p class="hero-description">
          Je crée des sites web et des applications mobiles réactifs où les technologies rencontrent la créativité
        </p>
        <a href="#contacts" class="btn">Contactez moi !!</a>
      </div>
      <div class="hero-visual">
        <div class="hero-image">
          <div class="image-placeholder">
            <img src="./assets/hero.png" alt="Adil Marzouki" style="width: 100%; height: 100%; object-fit: cover;" />
          </div>
          <div class="dots dots-top-right">
            <div class="dot"></div><div class="dot"></div><div class="dot"></div><div class="dot"></div><div class="dot"></div>
            <div class="dot"></div><div class="dot"></div><div class="dot"></div><div class="dot"></div><div class="dot"></div>
            <div class="dot"></div><div class="dot"></div><div class="dot"></div><div class="dot"></div><div class="dot"></div>
            <div class="dot"></div><div class="dot"></div><div class="dot"></div><div class="dot"></div><div class="dot"></div>
            <div class="dot"></div><div class="dot"></div><div class="dot"></div><div class="dot"></div><div class="dot"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>

<style>
  .hero {
    min-height: 100vh;
    padding-top: 100px;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }


  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: center;
  }

  .hero-text h1 {
    font-size: 2rem;
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.4;
    margin-bottom: 1.5rem;
  }

  .highlight {
    color: var(--accent);
  }

  .hero-description {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    font-size: 1rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border: 1px solid var(--accent);
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 0.3s ease;
    background: transparent;
  }

  .btn:hover {
    background-color: var(--accent);
    color: var(--bg-primary);
  }

  .hero-visual {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .hero-image {
    position: relative;
  }

  .image-placeholder {
    width: 400px;
    height: 400px;
    border: 1px solid var(--accent);
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
  }

  .image-placeholder svg {
    width: 200px;
    height: 250px;
  }

  .dots {
    position: absolute;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 4px;
  }

  .dots-top-right {
    top: -20px;
    right: -20px;
  }

  .dot {
    width: 4px;
    height: 4px;
    background-color: var(--text-secondary);
    border-radius: 50%;
  }

  .status-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border: 1px solid var(--text-secondary);
    padding: 0.5rem 0.75rem;
    margin-top: 1rem;
    font-size: 1rem;
  }

  .status-indicator {
    width: 16px;
    height: 16px;
    background-color: var(--accent);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .status-box strong {
    color: var(--text-primary);
  }

  .decorative-square {
    position: absolute;
    width: 80px;
    height: 80px;
    border: 1px solid var(--text-secondary);
  }

  .square-1 {
    bottom: 10%;
    left: 10%;
  }

  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-text h1 {
      font-size: 1.5rem;
    }

    .hero-visual {
      align-items: center;
    }

    .image-placeholder {
      width: 280px;
      max-width: 100%;
      height: 280px;
    }
  }
</style>